/* pages/goods_list/goods_list.wxss */
.search{
  background-color: #eeeeee;
  width: 100%;
  height:120rpx;
  position: relative;
}
.search-in{
  background-color: #ffffff;
  width: 720rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 15rpx;
  border-radius: 15rpx;
}
.search-icon{
  padding: 10rpx 20rpx;
}
.search-text{
  padding: 10rpx 0;
}


.tabs{
  display: flex;
}
.tabs-item{
  width: 33.33%;
  text-align: center;
  padding: 35rpx 0;
  border-bottom: 1px solid #ddd;
}
.goods-list-item{
  display: flex;
  padding: 20px 20rpx;
  border-bottom: 1px solid #ddd;
}
.goods-list-imges{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.goods-list-info{
  display: flex;
  height: 200rpx;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.goods-list-title{
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
font-size: 28rpx;
}
.goods-list-price{
color: #eb4450;
}